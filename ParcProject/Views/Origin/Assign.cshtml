@using ParcProject.Models;
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row m-b-30">
    <div class="col-md-6">
        <div class="card" style="width:100%">
            <div class="card-header">Search</div>
            <div class="card-body">
                <div class="card-title">
                    <h3 class="text-center title-2">Search By Values</h3>
                </div>
                <p id="errorMsg" style="color:red"></p>
                <hr />
                <form id="form">
                    <div class="form-group">
                        Article Number  <input id="nbArticle" class="form-control" type="text" name="nbArticle" placeholder="Article Number" />
                    </div>
                    <div class="form-group">
                        Origin Number  <input id="nbOrigin" class="form-control" type="text" name="nbArticle" placeholder="Article Number" />
                    </div>
                </form>
                <button onclick="Assign()" class="btn btn-success">Assign</button>

            </div>

        </div>

    </div></div>

@section scripts{
    
    <script>
        function Assign() {
            var articleId = $('#nbArticle').val();
            var originId = $('#nbOrigin').val();
            $.ajax({
                    url: '/Origin/assignOrigin',
                    type: "post",
                    data: {
                        "oeNumber": originId,
                        "articleId": articleId
                    },
                    success: function (data) {
                        console.log(data);
                        if (data == "success") {
                            alert("Assign Success");
                        } else {
                            alert(data);
                        }
                    },
                    error: function (err) {
                        alert(err);
                    }

                });
            
        }
        $(document).ready(function () {
          

         });


    </script>    

}